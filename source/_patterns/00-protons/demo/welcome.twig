{% embed '@atoms/grid/_grid-1-up.twig' with { container: true } %}
  {% block column_1 %}
    <div class="text-center">

      {# this spinner styles are hardcoded in the 00-head, it disappears when webpack bundles. #}
      <div class="spinner">
        <div class="double-bounce1"></div>
        <div class="double-bounce2"></div>
      </div>


      <h1 class="mb-4">Welcome to Particle</h1>

      {% include "@atoms/_image.twig" with {
        img: {
          src: paths.assets ~ '/astrogoat.png',
        },
      } %}

      <p class="mt-4">Particle is a starterkit to help you make design systems with Webpack and Twig.</p>
      <p>Start exploring by click the Atomic Design links in the black sticky bar. For vastly more information about how to use Particle, <a href="https://github.com/phase2/particle" target="_blank">check out the README.md file</a>.</p>
    </div>

  {% endblock column_1 %}
{% endembed %}
