{#
/**
 * @file
 * Theme override for a one-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 */
#}

{% extends '@atoms/grid/_grid-1-up.twig' %}
{# This presumes the main content area already contains a class of container. #}
{% set container = false %}

{% block column_1 %}
  <div {{ region_attributes.content }}>
    {{ content }}
  </div>
{% endblock %}
