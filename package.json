{
  "name": "particle",
  "version": "10.8.0",
  "description": "A starter kit to build a design system shared to Pattern Lab and and Drupal",
  "main": "",
  "license": "GPL-2.0",
  "author": {
    "name": "Phase2 Technology",
    "url": "https://github.com/phase2/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:phase2/particle.git"
  },
  "keywords": [
    "pattern-lab",
    "prototyping"
  ],
  "scripts": {
    "start": "npm run dev:pl",
    "pl": "node ./apps/pl-default/pl-app.js",
    "setup": "patternlab install --config ./apps/pl-default/patternlab-config.json && patternlab build --config ./apps/pl-default/patternlab-config.json",
    "pl:webpack": "webpack --config ./apps/pl-default/webpack.config.js",
    "dev:pl": "(export NODE_ENV=development; npm run pl && webpack-dev-server --config ./apps/pl-default/webpack.config.js --hot)",
    "build:pl": "(export NODE_ENV=production; concurrently \"npm:pl\" \"npm:pl:webpack\")",
    "dev:drupal": "NODE_ENV=development; webpack --watch --config ./apps/drupal-default/webpack.config.js",
    "build:drupal": "NODE_ENV=production webpack --hide-modules --config ./apps/drupal-default/webpack.config.js",
    "lint:js": "eslint --ext .js ./",
    "lint:css": "stylelint '**/*.css'",
    "lint": "npm run lint:js; npm run lint:css;",
    "fmt:js": "npm run lint:js -- --fix",
    "fmt:css": "npm run lint:css -- --fix",
    "fmt:svg": "svgo -f ./source/default/static/icons/svg --config=./.svgo.yml",
    "fmt": "prettier --write . && concurrently \"npm:fmt:*\"",
    "test:backstop:ref": "node tools/tests/vrt/backstop-example-reference.js",
    "test:backstop:test": "node tools/tests/vrt/backstop-example-test.js",
    "test:pa11y": "pa11y-ci --config tools/tests/accessibility/pa11y.js",
    "test:unit:default": "NODE_ENV=test jest --projects source/default/",
    "test:unit": "npm run test:unit:default",
    "test:tools:generators": "NODE_ENV=test jest --projects tools/generators/",
    "test": "npm run test:unit",
    "verify": "concurrently \"npm:lint\" \"npm:test\" \"npm:build:pl\" \"npm:build:drupal\"",
    "new": "yo new-component",
    "preinstall": "npx npm-force-resolutions",
    "postinstall": "cd tools/generators/new-component && npm link"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "core-js": "^3.6.5",
    "holderjs": "^2.9.7",
    "jquery": "^3.5.1",
    "lodash": "^4.17.20",
    "prismjs": "^1.22.0",
    "regenerator-runtime": "^0.13.7",
    "svg4everybody": "^2.1.9",
    "tailwindcss": "^1.9.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@pattern-lab/cli": "^5.13.1",
    "@pattern-lab/core": "^5.13.1",
    "@pattern-lab/engine-twig-php": "^5.13.1",
    "@pattern-lab/uikit-workshop": "^5.13.1",
    "@tailwindcss/custom-forms": "^0.2.1",
    "babel-jest": "^26.6.1",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.3.0",
    "css-loader": "^5.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.12.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "file-loader": "^6.1.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "jest-fetch-mock": "^3.0.3",
    "jsondiffpatch": "^0.4.1",
    "mini-css-extract-plugin": "^1.2.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "pa11y": "^5.3.0",
    "pa11y-ci": "^2.4.0",
    "postcss": "^8.1.4",
    "postcss-hexrgba": "^2.0.1",
    "postcss-loader": "^4.0.4",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "resolve-url-loader": "^3.1.2",
    "style-loader": "^2.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "svg-spritemap-webpack-plugin": "^3.5.10",
    "svgo": "^1.3.2",
    "terser-webpack-plugin": "^4.2.3",
    "url-loader": "^4.1.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.2.0",
    "yo": "^3.1.1"
  },
  "resolutions": {
    "@basalt/twig-renderer": "^2.0.0"
  }
}
