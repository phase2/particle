{
  "name": "Particle",
  "version": "10.0.0",
  "description": "A starterkit to build a design system shared to Pattern Lab, Drupal, Grav",
  "main": "gulpfile.js",
  "license": "GPL-2.0",
  "author": {
    "name": "Phase2 Technology",
    "url": "https://github.com/phase2/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:phase2/particle.git"
  },
  "keywords": [
    "pattern-lab",
    "prototyping"
  ],
  "scripts": {
    "start": "gulp",
    "compile": "NODE_ENV=production gulp compile",
    "compile:pl": "webpack --display-entrypoints --config webpack.pl.config.js && gulp compile",
    "compile:drupal": "webpack --display-entrypoints --config webpack.drupal.config.js",
    "compile:grav": "webpack --display-entrypoints --config webpack.grav.config.js",
    "lint:js": "eslint ./",
    "lint:scss": "stylelint '{source, apps/drupal, apps/pl}/**/*.scss'",
    "lint": "npm run lint:js; npm run lint:scss",
    "gulp": "gulp",
    "update": "npm update && cd ./apps/pl/pattern-lab && composer update",
    "new": "yo ./tools/new-component/index.js",
    "setup": "cd ./apps/pl/pattern-lab && composer install --no-interaction --ignore-platform-reqs",
    "webpack-pl": "webpack --display-entrypoints --config webpack.pl.config.js",
    "webpack-drupal": "webpack --display-entrypoints --config webpack.drupal.config.js",
    "webpack-grav": "webpack --display-entrypoints --config webpack.grav.config.js",
    "webpack-dev-server": "webpack-dev-server --hot --inline --progress",
    "test:pa11y": "node tools/tests/accessibility/pa11y.js",
    "test:unit": "jest",
    "test": "npm run test:unit",
    "ci": "npm run lint && npm run test && npm run compile:pl"
  },
  "browserslist": [
    "last 2 versions",
    "IE >= 10"
  ],
  "dependencies": {
    "bootstrap": "^4.0.0",
    "font-awesome": "^4.7.0",
    "holderjs": "^2.9.4",
    "jquery": "^3.3.1",
    "lodash": "^4.17.5",
    "popper.js": "^1.13.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@theme-tools/sass-export-data": "^1.1.0",
    "autoprefixer": "^7.2.6",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.2.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "css-hot-loader": "^1.3.7",
    "css-loader": "^0.28.9",
    "eslint": "^4.17.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.12.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "^1.1.6",
    "glob": "^7.1.2",
    "gulp": "^4.0.0",
    "jest": "^22.3.0",
    "js-yaml": "^3.10.0",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.1.0",
    "regenerator-runtime": "^0.11.1",
    "sass-extract": "^1.0.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.2",
    "stylelint": "^9.0.0",
    "stylelint-scss": "^2.3.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "through2": "^2.0.3",
    "url-loader": "^0.6.2",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-iconfont-plugin": "0.0.2",
    "webpack-merge": "^4.1.1",
    "yeoman-generator": "^2.0.1",
    "yo": "^2.0.1"
  }
}
