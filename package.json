{
  "name": "Particle",
  "version": "10.0.0",
  "description": "A starterkit to build a design system shared to Pattern Lab, Drupal, Grav",
  "main": "gulpfile.js",
  "license": "GPL-2.0",
  "author": {
    "name": "Phase2 Technology",
    "url": "https://github.com/phase2/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:phase2/particle.git"
  },
  "keywords": [
    "pattern-lab",
    "prototyping"
  ],
  "scripts": {
    "start": "npm run dev:pl",
    "dev:pl": "npm-run-all --continue-on-error --parallel dev:pl:gulp dev:pl:webpack",
    "dev:pl:webpack": "webpack-dev-server --config ./apps/pl/webpack.pl.dev.js --hot --progress",
    "dev:pl:gulp": "NODE_ENV='development' gulp default",
    "build:pl": "NODE_ENV='production' gulp compile; webpack --config ./apps/pl/webpack.pl.prod.js",
    "dev:drupal": "npm-run-all --continue-on-error --parallel dev:drupal:gulp dev:drupal:webpack",
    "dev:drupal:webpack": "webpack --watch --progress --config ./apps/drupal/webpack.drupal.dev.js",
    "dev:drupal:gulp": "NODE_ENV='development' echo Placeholder for Drupal gulp tasks",
    "build:drupal": "webpack --config ./apps/drupal/webpack.drupal.prod.js",
    "dev:grav": "npm-run-all --continue-on-error --parallel dev:grav:gulp dev:grav:webpack",
    "dev:grav:webpack": "webpack --watch --progress --config ./apps/grav/webpack.grav.dev.js",
    "dev:grav:gulp": "NODE_ENV='development' echo Placeholder for Grav gulp tasks",
    "build:grav": "webpack --config ./apps/grav/webpack.grav.prod.js",
    "lint:js": "eslint ./",
    "lint:scss": "stylelint '{source, apps/drupal, apps/pl}/**/*.scss'",
    "lint": "npm run lint:js; npm run lint:scss",
    "gulp": "gulp",
    "setup": "cd ./apps/pl/pattern-lab && composer install --no-interaction --ignore-platform-reqs",
    "test:pa11y": "node tools/tests/accessibility/pa11y.js",
    "test:unit": "jest",
    "test": "npm run test:unit",
    "ci": "npm run lint && npm run test && npm run build:pl"
  },
  "browserslist": [
    "last 2 versions",
    "IE >= 10"
  ],
  "dependencies": {
    "bootstrap": "^4.0.0",
    "font-awesome": "^4.7.0",
    "holderjs": "^2.9.4",
    "jquery": "^3.3.1",
    "lodash": "^4.17.5",
    "popper.js": "^1.13.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.40",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.40",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "@theme-tools/sass-export-data": "^1.1.1",
    "autoprefixer": "^8.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^22.4.1",
    "babel-loader": "^8.0.0-beta.2",
    "css-loader": "^0.28.10",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.13.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "glob": "^7.1.2",
    "gulp": "^4.0.0",
    "iconfont-plugin-webpack": "^1.0.0",
    "jest": "^22.4.2",
    "js-yaml": "^3.11.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "^2.1.1",
    "regenerator-runtime": "^0.11.1",
    "sass-extract": "^1.0.1",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.2",
    "stylelint": "^9.1.1",
    "stylelint-scss": "^2.5.0",
    "stylelint-webpack-plugin": "github:waterfoul/stylelint-webpack-plugin#0f46e8f",
    "through2": "^2.0.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.10",
    "webpack-dev-server": "^3.1.0",
    "webpack-merge": "^4.1.2",
    "webpack-shell-plugin": "^0.5.0"
  }
}
