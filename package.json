{
  "name": "particle",
  "version": "10.0.0",
  "description": "A starterkit to build a design system shared to Pattern Lab, Drupal, Grav",
  "main": "gulpfile.js",
  "license": "GPL-2.0",
  "author": {
    "name": "Phase2 Technology",
    "url": "https://github.com/phase2/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:phase2/particle.git"
  },
  "keywords": [
    "pattern-lab",
    "prototyping"
  ],
  "scripts": {
    "start": "npm run dev:pl",
    "dev:pl": "NODE_ENV='development' webpack-dev-server --config ./apps/pl/webpack.pl.dev.js --hot",
    "build:pl": "NODE_ENV='production' webpack --config ./apps/pl/webpack.pl.prod.js",
    "dev:drupal": "NODE_ENV='development' webpack --watch --progress --config ./apps/drupal/webpack.drupal.dev.js",
    "build:drupal": "NODE_ENV='production' webpack --config ./apps/drupal/webpack.drupal.prod.js",
    "dev:grav": "NODE_ENV='development webpack --watch --progress --config ./apps/grav/webpack.grav.dev.js",
    "build:grav": "NODE_ENV='production' webpack --config ./apps/grav/webpack.grav.prod.js",
    "lint:js": "eslint ./",
    "lint:scss": "stylelint '**/*.{css,scss}'",
    "lint": "npm run lint:js; npm run lint:scss",
    "fmt:js": "npm run lint:js -- --fix && prettier --loglevel warn --write '**/*.{js,json}'",
    "fmt:scss": "npm run lint:scss -- --fix && prettier --loglevel warn --write '**/*.{css,scss}'",
    "fmt": "npm run fmt:js; npm run fmt:scss",
    "test:pa11y": "node tools/tests/accessibility/pa11y.js",
    "test:unit": "jest",
    "test": "npm run test:unit",
    "setup": "cd ./apps/pl/pattern-lab && composer install --no-interaction --ignore-platform-reqs",
    "ci": "npm run lint && npm run test && npm run build:pl",
    "new": "yo ./tools/new-component/index.js"
  },
  "browserslist": [
    "last 2 versions",
    "IE >= 11"
  ],
  "dependencies": {
    "bootstrap": "^4.1.1",
    "font-awesome": "^4.7.0",
    "holderjs": "^2.9.4",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.3",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.44",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@theme-tools/sass-export-data": "^1.1.1",
    "autoprefixer": "^8.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "babel-loader": "^8.0.0-beta.2",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-prettier": "^2.6.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "glob-loader": "^0.3.0",
    "gulp": "^4.0.0",
    "husky": "^1.0.0-rc.9",
    "iconfont-plugin-webpack": "^1.1.0",
    "jest": "^22.4.3",
    "js-yaml": "^3.11.0",
    "lodash": "^4.17.10",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.3",
    "prettier": "^1.13.5",
    "pretty-quick": "^1.6.0",
    "regenerator-runtime": "^0.12.0",
    "resolve-url-loader": "^2.3.0",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.1",
    "stylelint-config-prettier": "^3.2.0",
    "stylelint-scss": "^3.0.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "through2": "^2.0.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2",
    "yeoman-generator": "^2.0.5",
    "yo": "^2.0.2"
  }
}
