{
  "name": "particle",
  "version": "10.0.0",
  "description": "A starterkit to build a design system shared to Pattern Lab, Drupal, Grav",
  "main": "gulpfile.js",
  "license": "GPL-2.0",
  "author": {
    "name": "Phase2 Technology",
    "url": "https://github.com/phase2/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:phase2/particle.git"
  },
  "keywords": [
    "pattern-lab",
    "prototyping"
  ],
  "scripts": {
    "start": "npm run dev:pl",
    "dev:pl": "cross-env NODE_ENV=development webpack-dev-server --config ./apps/pl/webpack.pl.js --hot",
    "build:pl": "cross-env NODE_ENV=production webpack --config ./apps/pl/webpack.pl.js",
    "dev:drupal": "cross-env NODE_ENV=development webpack --watch --config ./apps/drupal/webpack.drupal.js",
    "build:drupal": "cross-env NODE_ENV=production webpack --config ./apps/drupal/webpack.drupal.js",
    "dev:grav": "cross-env NODE_ENV=development webpack --watch --config ./apps/grav/webpack.grav.js",
    "build:grav": "cross-env NODE_ENV=production webpack --config ./apps/grav/webpack.grav.js",
    "lint:js": "eslint ./",
    "lint:scss": "stylelint '**/*.{css,scss}'",
    "lint": "npm run lint:js; npm run lint:scss",
    "fmt:js": "npm run lint:js -- --fix && prettier --write '**/*.{js,json}'",
    "fmt:scss": "npm run lint:scss -- --fix && prettier --loglevel warn --write '**/*.{css,scss}'",
    "fmt": "npm run fmt:js; npm run fmt:scss",
    "test:pa11y": "node tools/tests/accessibility/pa11y.js",
    "test:unit": "jest",
    "test": "npm run test:unit",
    "setup": "cd ./apps/pl/pattern-lab && composer install --no-interaction --ignore-platform-reqs",
    "ci": "npm run lint && npm run test && npm run build:pl && npm run build:drupal && npm run build:grav",
    "new": "yo ./tools/new-component/index.js"
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "font-awesome": "^4.7.0",
    "holderjs": "^2.9.4",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.4",
    "redux": "^3.7.2",
    "redux-thunk": "^2.3.0",
    "svg4everybody": "^2.1.9"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@theme-tools/sass-export-data": "^1.1.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-prettier": "^2.6.2",
    "file-loader": "^1.1.11",
    "glob-loader": "^0.3.0",
    "gulp": "^4.0.0",
    "husky": "^1.0.0-rc.14",
    "jest": "^23.6.0",
    "jest-fetch-mock": "^1.6.6",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.11",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.9.3",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.0.4",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0",
    "prismjs": "^1.15.0",
    "resolve-url-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "stylelint": "^9.5.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-scss": "^3.3.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "svg-spritemap-webpack-plugin": "2.6.0",
    "through2": "^2.0.3",
    "url-loader": "^1.1.1",
    "webpack": "^4.19.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8",
    "webpack-merge": "^4.1.4",
    "yeoman-generator": "^3.1.1",
    "yo": "^2.0.5"
  }
}
